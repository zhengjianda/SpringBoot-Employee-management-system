<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.luo.dao.DepartmentMapper">

   <select id="getDepartments" resultType="com.luo.pojo.Department">
       select * from webtest.department
   </select>

    <select id="getDepartmentById" resultType="com.luo.pojo.Department">
        select * from webtest.department where id=#{id}
    </select>

</mapper>